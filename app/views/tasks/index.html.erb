<p id="notice"><%= notice %></p>

<h1><%= t("views.tasks.index.title") %></h1>

<table>
  <thead>
    <tr>
      <th ><%= t("views.tasks.index.headers.title") %></th>
      <th><%= t("views.tasks.index.headers.content") %></th>
      <th><%= t("views.tasks.index.headers.created_at") %></th>
      <th><%= t("views.tasks.index.headers.deadline_on") %></th>
      <th><%= t("views.tasks.index.headers.priority") %></th>
      <th><%= t("views.tasks.index.headers.status") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task-title"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= task.deadline_on %></td>
        <td><%= I18n.t("activerecord.attributes.task.priority_values.#{task.priority}") %></td>
        <td><%= I18n.t("activerecord.attributes.task.status_values.#{task.status}") %></td>
        <td class="show-task"><%= link_to t("views.tasks.index.links.show"), task %></td>
        <td class="edit-task"><%= link_to t("views.tasks.index.links.edit"), edit_task_path(task) %></td>
        <td class="destroy-task"><%= link_to t("views.tasks.index.links.destroy"), task, method: :delete, data: { confirm: t('viewes.tasks.index.dialogs.destroy_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @tasks %>
