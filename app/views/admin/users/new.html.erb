<h1>ユーザ登録ページ</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.messages.each do |attribute, messages| %>
        <% messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: admin_users_path, local: true do |form| %>
  <div>
    <%= form.label :name, '名前' %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation, 'パスワード（確認）' %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.label :admin, '管理者権限' %>
    <%= form.check_box :admin %>
  </div>
  <div>
    <%= form.submit '登録する', id: 'create-user', class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '戻る', admin_users_path, id: 'back' %>